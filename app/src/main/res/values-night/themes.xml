<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanDictionary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep</item>
        <item name="colorPrimaryVariant">@color/deep</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep</item>
        <item name="colorSecondaryVariant">@color/deep</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Text color. -->
        <item name="android:textColor">@color/white</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Background Tint color. -->
        <item name="android:indeterminateTint">@color/white</item>
    </style>
</resources>